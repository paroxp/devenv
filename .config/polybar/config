[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
color0 = ${xrdb:color0}
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}
color6 = ${xrdb:color6}
color7 = ${xrdb:color7}

[bar/top]
monitor = ${env:MONITOR:eDP1}

background = ${colors.background}
foreground = ${colors.foreground}

padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Fira Mono Medium:size=10;1
font-1 = FuraMono Nerd Font Mono:12;2
font-2 = Unifont:size=10;3

modules-left =
modules-center = xwindow music
modules-right = volume backlight wireless-network wired-network battery date power-menu

[bar/bottom]
monitor = ${env:MONITOR:eDP1}
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = Fira Mono Medium:size=10;1
font-1 = FuraMono Nerd Font Mono:12;2
font-2 = Unifont:size=10;3

modules-left = i3
modules-right = system-fan-speed cpu temperature memory

# Module for window title
[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%

# Module for i3 workspaces
[module/i3]
type = internal/i3
# Icons
ws-icon-[0-9]+ = label;icon
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-default = 

strip-wsnumbers = true
format = <label-state> <label-mode>
index-sort = true
pin-workspaces = true
wrapping-scroll = false
label-mode-padding = 1
label-mode-background = ${colors.background}
label-focused = "%icon%"
label-focused-background = ${colors.color4}
label-focused-underline = ${colors.color1}
label-focused-padding = 1
label-unfocused = "%icon%"
label-unfocused-padding = 1
label-urgent = "%icon%"
label-urgent-background = ${colors.color1}
label-urgent-underline = ${colors.color4}
label-urgent-padding = 1

# Module for brightness
[module/xbacklight]
type = internal/xbacklight
format = <label> <bar>
label = " "
label-foreground = ${colors.color6}
bar-width = 10
bar-indicator = |
bar-indicator-foreground = ${colors.color6}
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = ${colors.color6}
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.color7}

# Module for wifi
[module/wifi]
type = internal/network
interface = wlp3s0
interval = 3.0
format-connected = <ramp-signal> <label-connected>
label-connected = " %essid%"
format-disconnected = <label-disconnected>
label-disconnected = " ..."
label-disconnected-foreground = ${colors.color1}
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.color1}

# Module for date & time
[module/date]
type = internal/date
interval = 1
format-prefix = "  "
format-prefix-foreground = ${colors.color4}
date = %b %d %H:%M
label = %date%

# Module for volume
[module/volume]
type = internal/volume
format-volume = <label-volume>
format-volume-prefix = "  "
format-volume-prefix-foreground = ${colors.color4}
label-volume = %percentage%%
format-muted-prefix = "  "
format-muted-prefix-foreground = ${colors.color4}
label-muted = "Muted"

# Module for battery
[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
full-at = 100
format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.color2}
format-charging-prefix = " "
format-discharging = <ramp-capacity> <label-discharging>
format-full-prefix = " "
format-full-prefix-foreground = ${colors.color2}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

ramp-capacity-foreground-0 = ${colors.color1}
ramp-capacity-foreground-1 = ${colors.color6}
ramp-capacity-foreground-2 = ${colors.color2}
ramp-capacity-foreground-3 = ${colors.color2}
ramp-capacity-foreground-4 = ${colors.color2}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground-0 = ${colors.color1}
animation-charging-foreground-1 = ${colors.color6}
animation-charging-foreground-2 = ${colors.color2}
animation-charging-foreground-3 = ${colors.color2}
animation-charging-foreground-4 = ${colors.color2}
animation-charging-framerate = 350

# Module for power menu
[module/power-menu]
type = custom/menu

label-open = 
label-close =

menu-0-0 = " Log out "
format-foreground = ${colors.color1}
menu-0-0-exec = i3-msg exit
menu-0-1 = "  Reboot "
menu-0-1-foreground = ${colors.color1}
menu-0-1-exec = i3exit reboot
menu-0-2 = "  Power off "
menu-0-2-foreground = ${colors.color1}
menu-0-2-exec = shutdown now
menu-0-3 = "  Cancel"

menu-1-0 = Cancel
menu-1-0-foreground = ${colors.color1}
menu-1-0-exec = menu_open-0
menu-1-1 = Reboot
menu-1-1-foreground = ${colors.color1}
menu-1-1-exec = sudo reboot

menu-2-0 = Power off
menu-2-0-foreground = ${colors.color1}
menu-2-0-exec = sudo poweroff
menu-2-1 = Cancel
menu-2-1-foreground = ${colors.color1}
menu-2-1-exec = menu_open-0

# Module for music
[module/music]
type = custom/script
format-prefix = "  "
format-prefix-foreground = ${colors.color2}
interval = 1
exec = ~/.config/polybar/scripts/music

[module/system-fan-speed]
type = custom/script
exec = ~/.config/polybar/scripts/system-fan-speed
format-prefix=
interval = 10

[module/temperature]
type=internal/temperature
thermal-zone=0
hwmon-path=/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input
warn-temperature=65

[module/wireless-network]
type = internal/network
interface = wlp3s0
interval = 3.0
ping-interval = 10

format-connected = <ramp-signal> <label-connected>
label-connected = " %essid%"
format-disconnected = <label-disconnected>
label-disconnected = " ..."
label-disconnected-foreground = ${colors.color1}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.color1}

animation-packetloss-0 = 
animation-packetloss-0-foreground = ${colors.color1}
animation-packetloss-1 = 
animation-packetloss-1-foreground = ${colors.foreground}
animation-packetloss-framerate = 500

[module/wired-network]
type = internal/network
interface = enp0s25
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.color1}
label-connected = " %local_ip%"
format-disconnected =

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label> <ramp-coreload>
label = CPU

ramp-coreload-0 = ▁
ramp-coreload-0-font = 2
ramp-coreload-0-foreground = ${colors.color2}
ramp-coreload-1 = ▂
ramp-coreload-1-font = 2
ramp-coreload-1-foreground = ${colors.color2}
ramp-coreload-2 = ▃
ramp-coreload-2-font = 2
ramp-coreload-2-foreground = ${colors.color2}
ramp-coreload-3 = ▄
ramp-coreload-3-font = 2
ramp-coreload-3-foreground = ${colors.color2}
ramp-coreload-4 = ▅
ramp-coreload-4-font = 2
ramp-coreload-4-foreground = ${colors.color1}
ramp-coreload-5 = ▆
ramp-coreload-5-font = 2
ramp-coreload-5-foreground = ${colors.color1}
ramp-coreload-6 = ▇
ramp-coreload-6-font = 2
ramp-coreload-6-foreground = ${colors.color3}
ramp-coreload-7 = █
ramp-coreload-7-font = 2
ramp-coreload-7-foreground = ${colors.color3}

[module/memory]
type = internal/memory
format = <label> <bar-used>
label = RAM

bar-used-width = 30
bar-used-foreground-0 = ${colors.color2}
bar-used-foreground-1 = ${colors.color1}
bar-used-foreground-2 = ${colors.color2}
bar-used-foreground-3 = ${colors.color3}
bar-used-indicator = |
bar-used-indicator-font = 6
bar-used-indicator-foreground = ${colors.color3}
bar-used-fill = ─
bar-used-fill-font = 6
bar-used-empty = ─
bar-used-empty-font = 6
bar-used-empty-foreground = ${colors.color7}

[settings]
screenchange-reload = true

